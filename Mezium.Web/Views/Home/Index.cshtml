@model IReadOnlyCollection<StoryViewModel>

@if (Model is null || Model.Count == 0)
{
    <h2>There are no stories yet</h2>
    return;
}

<div class="flex-column">
    @foreach (var story in Model)
    {
        <div style="margin-bottom: 10px" class="card">
            <div class="card-body">
                <span style="font-size: 13px" class="fw-light">@story.AuthorName</span>
                <a href="#">
                    <h5 class="card-title">@story.Title</h5>
                    <p class="card-text">@story.Description</p>
                </a>
                <span style="font-size: 13px" class="fw-light">@story.PublishDate.ToString("MMMd")</span>
            </div>
        </div>
    }
</div>


